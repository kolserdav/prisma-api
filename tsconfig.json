{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "exclude": ["app", "dist"],
  "compileOnSave": true,
  "include": ["src/index.d.ts", "node_modules/**/*.d.ts", "node_modules/**/**/*.d.ts"]
}
