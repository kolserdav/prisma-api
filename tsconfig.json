{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "rootDirs": ["src", "lib"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["app", "dist", "rollup.config.**"],
  "compileOnSave": true
}
